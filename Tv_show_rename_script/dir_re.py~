import os

list1 = []

count = 0

cwd = os.getcwd()

def rm_underscore(str1):
    str2 = str1[0:len(str1) -12]
    str_out = ""
    for ch in str2:
        if ch == '_':
            str_out = str_out + " "
        else:
            str_out = str_out + ch
    str_out = str_out + str1[len(str1) -12 : len(str1)]
    return str_out


#name = ""
print("")
print("Current working dir: " + cwd)
print("")

for file in os.listdir(cwd):
    list1.append(file)

list1.sort()    

for t in list1:
    name = list1[count]
    if (count + 1 > 9 ) :
        name = name[36:(len(name)-30)] + ")_s02e" + str(count + 1) + ".mp4"
    else:
        name =   name = name[36:(len(name)-30)] + ")_s02e0" + str(count + 1) + ".mp4"
    print( t + " <-> " + name)
    os.rename(cwd + "\\"+ t,cwd + "\\"+ name  )  
    print("")
    count += 1

